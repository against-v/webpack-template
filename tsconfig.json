{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,

    "allowJs": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": ["src", "postcss.config.js", "webpack.config.js", "custom.d.ts"]
}
